@model StudioManagement.Models.Member
@{
    ViewData["Title"] = "Member Details";
}

<h2 class="text-center my-4">Member Details</h2>

<div class="card shadow-lg mb-4">
    <div class="card-header bg-primary text-white text-center py-3">
        <h4 class="mb-0">Personal Information</h4>
    </div>
    <div class="card-body">
        <!-- Profile Image -->
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="text-center mb-4">
                <img src="~/@Model.ImageUrl" alt="Profile Image" class="img-fluid rounded-circle shadow" width="200" />
            </div>
        }
        else
        {
            <div class="text-center mb-4">
                <img src="~/images/default-profile.png" alt="Profile Image" class="img-fluid rounded-circle shadow" width="200" />
            </div>
        }

        <!-- User Full Name -->
        <div class="mb-3">
            <h5>@Model.User?.FullName() ?? "No Full Name"</h5>
        </div>

        <!-- Date of Birth -->
        <div class="mb-3">
            <p><strong>Date of Birth:</strong> @Model.DateOfBirth?.ToString("yyyy-MM-dd")</p>
        </div>

        <!-- Phone Number -->
        <div class="mb-3">
            <p><strong>Phone:</strong> @Model.PhoneNumber</p>
        </div>

        <!-- Gender -->
        <div class="mb-3">
            <p><strong>Gender:</strong> @(Model.Gender == true ? "Male" : "Female")</p>
        </div>

        <!-- Address -->
        <div class="mb-3">
            <p><strong>Address:</strong> @Model.Address</p>
        </div>

        <!-- Joined Date -->
        <div class="mb-3">
            <p><strong>Joined Date:</strong> @Model.JoinedDate?.ToString("yyyy-MM-dd")</p>
        </div>
    </div>
</div>

<!-- Action Buttons Delete Member -->
<div class="text-center my-4">
    <form asp-action="DeleteMember" asp-route-id="@Model.MemberId" asp-route-studioId="@Model.StudioID" method="post" class="d-inline">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete Member
        </button>
    </form>
</div>
