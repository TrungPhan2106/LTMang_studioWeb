@model IEnumerable<StudioManagement.Models.Member>

@{
    ViewData["Title"] = "Members List";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <h2 class="text-white text-center">Members List</h2>
    </div>
    <div class="card-body p-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Date of Birth</th>
                    <th>Studio</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model)
                {
                    <tr>
                        <td>@member.MemberId</td>
                        <td>@member.User?.FullName()</td>
                        <td>@member.PhoneNumber</td>
                        <td>@member.Address</td>
                        <td>@member.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                        <td>@member.Studio?.StudioName</td>
                        <td>
                            <a asp-action="MemberDetails" asp-route-id="@member.MemberId" class="btn btn-info btn-sm">Details</a>
                            <form asp-action="DeleteMember" asp-route-id="@member.MemberId" asp-route-studioId="@member.StudioID" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
