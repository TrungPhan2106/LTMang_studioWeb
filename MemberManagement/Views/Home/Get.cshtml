@model StudioManagement.Models.Studio
@{
    ViewData["Title"] = "Get";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Studio Information</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="border p-3 mt-4">
            <div class="col-sm-5 mx-auto text-center">
                <div class="col-sm-10">
                    @if (!string.IsNullOrEmpty(Model.StudioPic))
                    {
                        <img src="~/@Model.StudioPic" alt="Studio Image" class="img-thumbnail mt-2" width="150" />
                    }
                    else
                    {
                        <img src="~/images/default-studio.png" alt="Default Studio" class="img-thumbnail mt-2" width="150" />
                    }
                </div>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="StudioName" class="form-label p-0"></label>
                <input asp-for="StudioName" disabled class="form-control" />
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="StudioAddress" class="form-label p-0"></label>
                <input asp-for="StudioAddress" disabled class="form-control" />
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="StudioPhone" class="form-label p-0"></label>
                <input asp-for="StudioPhone" disabled class="form-control" />
            </div>
        </div>
        <div class="mt-3 mb-3 d-inline-flex col-12" style="justify-content:space-between">
            <a onclick="history.back()" class="btn btn-primary mx-2">
                <i class="bi bi-backspace" style="margin: 5px"></i> Go Back
            </a>
        </div>
    </div>
</div>
