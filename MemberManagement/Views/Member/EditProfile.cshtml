@model StudioManagement.Models.Member

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Profile</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="EditProfile" enctype="multipart/form-data" method="post">
            <input asp-for="ImageUrl" hidden />
            <div class="border p-3 mt-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MemberId" />
                <input type="hidden" asp-for="JoinedDate" />
                <div class="mb-3 row p-1">
                    <label asp-for="DateOfBirth" class="p-0"></label>
                    <input asp-for="DateOfBirth" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="PhoneNumber" class="p-0"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <fieldset class="input-group">
                        <div class="row">
                            <label class="form-check-label p-0" asp-for="Gender"></label>
                            <div class="col-sm-10">
                                <div class="mt-2">
                                    <div class="form-check form-check-inline">
                                        <input asp-for="Gender" class="form-check-input" type="radio" value="true" />
                                        <label class="form-check-label" asp-for="Gender">Male</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input asp-for="Gender" class="form-check-input" type="radio" value="false" />
                                        <label class="form-check-label" asp-for="Gender">Female</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Address" class="p-0"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="ImageUrl" class="p-0"></label>
                    <input type="file" name="file" class="form-control" />
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


